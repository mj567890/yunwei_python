# IT运维系统开发环境配置
FLASK_ENV=development
SECRET_KEY=dev-secret-key-for-testing-only
JWT_SECRET_KEY=dev-jwt-secret-key-for-testing-only

# 数据库配置 - 使用SQLite进行开发测试
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=it_ops_test

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 数据加密
DATA_ENCRYPTION_KEY=test-encryption-key-for-development

# API签名验证 - 开发环境关闭
ENABLE_API_SIGNATURE=false
API_SIGNATURE_SECRET=dev-api-signature-secret
SIGNATURE_TIMEOUT=300

# 异常检测 - 开发环境关闭
ENABLE_ANOMALY_DETECTION=false
ANOMALY_DETECTION_SENSITIVITY=low
MAX_LOGIN_ATTEMPTS=10
ACCOUNT_LOCKOUT_DURATION=300

# 安全通信 - 开发环境关闭
ENABLE_SECURE_COMMUNICATION=false

# 性能监控 - 开发环境启用
PERFORMANCE_MONITORING=true
MONITORING_INTERVAL=120

# 文件上传
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=52428800

# CORS配置 - 开发环境允许本地访问
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# 日志配置
LOG_LEVEL=DEBUG
LOG_TO_STDOUT=true